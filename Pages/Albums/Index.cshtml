@page
@model RazorPages_AlbumProject.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ArtistName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].RecordCompany)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Album) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordCompany)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AlbumId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AlbumId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AlbumId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
