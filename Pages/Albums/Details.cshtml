@page
@model RazorPages_AlbumProject.Pages.Albums.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Album.ArtistName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Album.ArtistName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Album.AlbumName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Album.AlbumName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Album.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Album.ReleaseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Album.RecordCompany)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Album.RecordCompany)
            </dd>
            <dd class="col-sm-10">
                @await Component.InvokeAsync("SongList",new {recordId=Model.Album.AlbumId})
            </dd>
        </dl>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Album?.AlbumId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
